entrypoint = "index.html"
modules = ["web", "python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_11"
packages = ["static-web-server"]

[deployment]
publicDir = "dist"
deploymentTarget = "autoscale"
run = ["npx", "serve", "dist", "-l", "5000"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42483
externalPort = 3000
