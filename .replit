entrypoint = "index.html"
modules = ["web", "python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_11"
packages = ["lsof", "nano", "static-web-server"]

[deployment]
publicDir = "dist"
deploymentTarget = "autoscale"
run = ["npx", "serve", "dist", "-l", "5000"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Server"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
defaultPort = 5000

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33887
externalPort = 3000

[webview]
port = 5000
